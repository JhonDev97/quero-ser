from time import sleep
print('Vamos trabalhar com o intervalo de 1 a 100.Tente descobrir a lógica da sequência!')
for c in range(1, 101):    # 'c' é o contador dentro do range de 1 a 100
    if c % 3 == 0 and c % 5 == 0:
        sleep(0.5)
        print('FizzBuzz')
    elif c % 3 == 0:
        sleep(0.5)
        print('Fizz')
    elif c % 5 == 0:
        sleep(0.5)
        print('Buzz')
    else:
        sleep(0.5)
        print(c)
